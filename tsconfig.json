{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts" // exclude all that contain "spec.ts" in name
  ]
}
